{
  "manifest_version": 3,
  "name": "Basic Color Changer",
  "version": "1.0.0",
  "description": "A basic MV3 extension that changes page background color from a popup.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "action": {
    "default_title": "Change background color",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
